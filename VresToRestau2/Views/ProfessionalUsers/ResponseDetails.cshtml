@model VresToRestau2.Models.Response

@{
    ViewData["Title"] = "Professional User Response Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <title>Professional User</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" />
    <link rel="stylesheet" href="~/css/ProfUser/ProfUserDashboardStyle.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>$(document).ready(function () {
            $('.sidebar-item a').on('click', function (event) {
                event.preventDefault();
                $('.sidebar-item a').removeClass('active');
                $(this).addClass('active');
            });

            var dashboardLink = document.querySelector('.sidebar-menu a[href="responses.html"]');
            if (dashboardLink) {
                dashboardLink.classList.add('active');
            }
        });</script>
    <script>document.addEventListener('DOMContentLoaded', function () {
            const sidebarLinks = document.querySelectorAll('.sidebar-menu a');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    const url = this.getAttribute('data-url');
                    if (url) {
                        window.location.href = url;
                    }
                });
            });
        });</script>
</head>
<body>

    <input type="checkbox" id="nav-toggle" />
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2><span class="lab la-accusoft"></span> <span>VresToRestau</span></h2>
        </div>

        <div class="sidebar-menu">
            <ul>
                <li class="sidebar-item">
                    <a href="#" data-url="/ProfessionalUsers/Dashboard">
                        <span class="las la-home"></span>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" data-url="/ProfessionalUsers/Reviews">
                        <span class="las la-comment"></span>
                        <span>Reviews</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="responses.html" data-url="/ProfessionalUsers/Responses">
                        <span class="las la-reply"></span>
                        <span>Responses</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="editrestaurant.html" data-url="/ProfessionalUsers/EditRestaurant">
                        <span class="las la-edit"></span>
                        <span>Edit Restaurant</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" data-url="/Visitors/Index">
                        <span class="las la-sign-out-alt"></span>
                        <span>LogOut</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>
                Professional User Dashboard
            </h2>
        </header>

        <main>
            <div class="recent-grid">
                <div class="customers">
                    <div class="card">
                        <div class="card-header">
                            <h3>Response Details</h3>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="back">Attribute</th>
                                        <th class="back">Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th>Username:</th>
                                        <td>@Html.DisplayFor(model => model.Id)</td>
                                    </tr>
                                    <tr>
                                        <th>RestaurantId:</th>
                                        <td>@Html.DisplayFor(model => model.ReviewId)</td>
                                    </tr>
                                    <tr>
                                        <th>Stars:</th>
                                        <td>@Html.DisplayFor(model => model.RestaurantName)</td>
                                    </tr>
                                    <tr>
                                        <th>Comment:</th>
                                        <td>@Html.DisplayFor(model => model.ResponseDetails)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
